<figure class="avatar">
	{{#if shouldWrapInHref}}
		<a class="user-avatar__link" href="{{profileUrl}}" title="{{displayName}}">
			{{#if avatarUrl}}
				<img class="user-avatar__image" src="{{avatarUrl}}" alt="Avatar">
			{{else}}
				{{svg 'avatar' viewBox='0 0 40 40' class='icon user-avatar__image'}}
			{{/if}}
		</a>
	{{else}}
		{{#if avatarUrl}}
			<img class="user-avatar__image" src="{{avatarUrl}}" title="{{displayName}}" alt="Avatar">
		{{else}}
			{{svg 'avatar' viewBox='0 0 40 40' class='icon user-avatar__image'}}
		{{/if}}
	{{/if}}
</figure>
{{#if badgePermission}}
	{{discussion-user-avatar-badge
		badgePermission=badgePermission
	}}
{{/if}}
{{#if displayProfileName}}
	{{#if shouldWrapInHref}}
		<a href="{{profileUrl}}" class="avatar-username">{{displayName}}</a>
	{{else}}
		<span class="avatar-username">{{displayName}}</span>
	{{/if}}
{{/if}}
