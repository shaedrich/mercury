{{#if model.subtitle}}
	<div class="wds-global-navigation__account-menu-dropdown-caption">{{i18n model.subtitle.key ns='design-system'}}</div>
{{/if}}

{{#if (equal model.title.key 'global-navigation-user-sign-out') }}
	<div style="padding: 11px 0" class="{{linkClasses}}">
		{{sign-out}}
	</div>
{{else}}
	<a href="{{href}}"
	   rel="nofollow"
	   id="{{model.title.key}}"
	   class="{{linkClasses}}"
		{{action this.attrs.trackClick model.tracking_label preventDefault=false}}>
		{{i18n model.title.key ns='design-system'}}
	</a>
{{/if}}
