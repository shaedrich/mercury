{{#if model.subtitle}}
	<div class="wds-global-navigation__account-menu-dropdown-caption">{{i18n model.subtitle.key ns='design-system'}}</div>
{{/if}}

{{#if (equal model.title.key 'global-navigation-user-sign-out') }}
	<div class="{{linkClasses}}" id="{{model.title.key}}">
		{{! Logout is a POST method, so we're using sign-out component rather than rendering a link}}
		{{sign-out title=model.title.key trackingLabel=model.tracking_label trackingCategory='navigation'}}
	</div>
{{else}}
	<a href="{{href}}"
	   rel="nofollow"
	   id="{{model.title.key}}"
	   class="{{linkClasses}}"
		{{action this.attrs.trackClick model.tracking_label preventDefault=false}}>
		{{i18n model.title.key ns='design-system'}}
	</a>
{{/if}}
