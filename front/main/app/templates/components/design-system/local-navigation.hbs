<ul class="wds-tabs">
	{{#each model as |firstLevelItem|}}
		<li class="wds-tabs__tab">
			{{#if firstLevelItem.items}}
				{{design-system.local-navigation-dropdown model=firstLevelItem}}
			{{else}}
				<div class="wds-tabs__tab-label">
					<a href="{{firstLevelItem.href}}">
						{{#if firstLevelItem.icon}}
							{{svg firstLevelItem.icon class='wds-icon wds-icon-tiny'}}
						{{/if}}
						<span>
							{{#if firstLevelItem.title.key}}
								{{i18n firstLevelItem.label.key}}
							{{else}}
								{{firstLevelItem.title.value}}
							{{/if}}
						</span>
					</a>
				</div>
			{{/if}}
		</li>
	{{/each}}
</ul>
