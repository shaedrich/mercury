<ul class="wds-tabs">
	{{#each model as |firstLevelItem|}}
		<li class="wds-tabs__tab{{if (equal firstLevelItem.href '/d/f') ' wds-is-current'}}">
			{{#if firstLevelItem.items}}
				{{design-system.local-navigation-dropdown model=firstLevelItem}}
			{{else}}
				<div class="wds-tabs__tab-label">
					<a href="{{firstLevelItem.href}}">
						{{#if firstLevelItem.image-data}}
							{{svg firstLevelItem.image-data.name class='wds-icon wds-icon-tiny'}}
						{{/if}}
						<span>
							{{#if (equal firstLevelItem.title.type 'translatable-text')}}
								{{i18n firstLevelItem.title.key ns='design-system'}}
							{{else}}
								{{firstLevelItem.title.value}}
							{{/if}}
						</span>
					</a>
				</div>
			{{/if}}
		</li>
	{{/each}}
</ul>
