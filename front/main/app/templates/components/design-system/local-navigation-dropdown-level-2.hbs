{{#design-system.wds-dropdown isLevel2=true tagName='li' class=stickedClassName as |dropdown|}}
	{{#dropdown.toggle tagName='a' href='#' trackingLabel=trackingLabel}}
		{{partial 'partials/nav-item'}}
	{{/dropdown.toggle}}
	{{#dropdown.content isNotScrollable=true}}
		<ul class="wds-list wds-is-linked">
			{{#each item.items as |thirdLevelItem|}}
				<li><a href="{{thirdLevelItem.href}}"  data-tracking-label="{{thirdLevelItem.tracking_label}}">{{thirdLevelItem.title.value}}</a></li>
			{{/each}}
		</ul>
	{{/dropdown.content}}
{{/design-system.wds-dropdown}}
