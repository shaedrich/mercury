{{#design-system.wds-dropdown isLevel2=true tagName='li' trackingLabel=trackingLabel class=stickedClassName as |dropdown|}}
	{{#dropdown.toggle tagName='a' href='#'}}
		<span>
			{{#if (equal model.title.type 'translatable-text')}}
				{{i18n model.title.key ns='design-system'}}
			{{else}}
				{{model.title.value}}
			{{/if}}
		</span>
	{{/dropdown.toggle}}
	{{#dropdown.content isNotScrollable=true}}
		<ul class="wds-list wds-is-linked">
			{{#each model.items as |thirdLevelItem|}}
				<li data-tracking-label="{{thirdLevelItem.tracking_label}}"><a href="{{thirdLevelItem.href}}">{{thirdLevelItem.title.value}}</a></li>
			{{/each}}
		</ul>
	{{/dropdown.content}}
{{/design-system.wds-dropdown}}
