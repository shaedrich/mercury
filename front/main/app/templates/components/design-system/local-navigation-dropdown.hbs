{{#wds-dropdown as |dropdown|}}
	{{#dropdown.toggle class='wds-tabs__tab-label'}}
		{{#if model.href}}
			<a href="{{model.href}}">
				{{#if model.icon}}
					{{wds-icon name=model.icon class='wds-icon-tiny'}}
				{{/if}}
				<span>
					{{#if model.label.key}}
						{{i18n model.label.key}}
					{{else}}
						{{model.label.value}}
					{{/if}}
				</span>
			</a>
		{{else}}
			{{#if model.icon}}
				{{wds-icon name=model.icon class='wds-icon-tiny'}}
			{{/if}}
			<span>
				{{#if model.label.key}}
					{{i18n model.label.key}}
				{{else}}
					{{model.label.value}}
				{{/if}}
			</span>
		{{/if}}
	{{/dropdown.toggle}}
	{{#dropdown.content isNotScrollable=true}}
		<ul class="wds-list wds-is-linked wds-has-bolded-items">
			{{#each model.submenu as |secondLevelItem index|}}
				{{#if secondLevelItem.submenu}}
					{{wds-community-header/local-navigation-dropdown-level-2 model=secondLevelItem currentIndex=index}}
				{{else}}
					<li>
						<a href="{{secondLevelItem.href}}">
							{{#if model.label.key}}
								{{i18n secondLevelItem.label.key}}
							{{else}}
								{{secondLevelItem.label.value}}
							{{/if}}
						</a>
					</li>
				{{/if}}
			{{/each}}
		</ul>
	{{/dropdown.content}}
{{/wds-dropdown}}
