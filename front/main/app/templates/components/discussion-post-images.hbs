{{#each displayedImages as |image|}}
	{{#if enableLightbox}}
		{{discussion-lightbox
			image=image
			onButtonClose=(action 'onLightboxCloseUsingButton')
			onClose=(action 'onLightboxClose')
			onKeyClose=(action 'onLightboxCloseUsingKey')
			onOpen=(action 'onLightboxOpen')
			widthMultiplier=widthMultiplier
		}}
	{{else}}
		{{discussion-post-image
			alt='Post image'
			class='post-image'
			shouldCrop=shouldCrop
			editorToolsVisible=areEditorToolsVisible
			image=image
			removeImage=(action 'removeImage')
			widthMultiplier=widthMultiplier
		}}
	{{/if}}
{{/each}}
