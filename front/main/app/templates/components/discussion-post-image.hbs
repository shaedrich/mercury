<div class="post-image-editor-tools-wrapper">
	{{#if image.isUploading}}
		<div class="image-placeholder">
			{{wds-spinner
				active=true
				radius=32
				strokeWidth=2
			}}
		</div>
	{{else}}
		<img class="post-image-inner-image" alt="{{alt}}" src="{{image.url}}" srcset="{{srcset}}" sizes="{{sizes}}">
	{{/if}}

	{{#if editorToolsVisible}}
		<a class="delete-image" {{action 'remove'}}>
			{{svg 'wds-icons-trash-small' class='wds-icon wds-icon-small'}}
		</a>
	{{/if}}
</div>
