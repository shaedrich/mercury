<span class="text-content columns {{if showButtons 'large-8 small-8' 'large-12 small-12'}}">
	{{#if post.isLocked}}
		{{svg 'locked' viewBox='0 0 14 16' class='icon locked'}}
	{{/if}}
	{{{topNoteText}}}
</span>
{{#if post.reportDetails}}
	{{#modal-dialog
		class='is-bare is-desktop-centered discussion-list-modal discussion-report-details'
		closeOnOverlayClick=true
		isVisible=isReportDetailsVisible
	}}
		{{discussion-report-details-user-list
			close=(action 'reportDetailsClose')
			reportDetails=post.reportDetails
		}}
	{{/modal-dialog}}
{{/if}}
{{#if showButtons}}
	<div class="actions columns large-4 small-4">
		{{#if post.isDeleted}}
			<a class="undelete-link" {{action 'undelete' post}}>{{svg 'wds-icons-trash-open-small' viewBox='0 0 18 18' class='icon undelete'}}</a>
		{{else}}
			<a class="validate-link" {{action 'approve' post isReply}}>{{svg 'checkmark' class='icon validate'}}</a>
			{{#if canDelete}}
				<a class="delete-link" {{action 'delete' post isReply}}>{{svg 'trash' class='icon reported-delete'}}</a>
			{{/if}}
		{{/if}}
	</div>
{{/if}}
