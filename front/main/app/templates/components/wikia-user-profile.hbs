<div class="user-profile-fixed-wrapper">
	<div class="wikia-nav__header">
		<a {{action 'getBack' preventDefault=false}}
				class="wikia-nav__back">
		</a>
		<a {{action 'trackClick' 'side-nav' 'open-logout' preventDefault=false}}
				href="{{unbound logoutLink}}"
				class="wikia-nav--external wikia-nav--logout">
			{{i18n 'app.user-menu-log-out'}}
		</a>
	</div>

	{{user-avatar
			username=username
	}}
	<h4 class="user-profile-username">{{username}}</h4>

	{{#if notificationsList.length}}
		<div class="notifications-title">
			<h5>{{i18n 'notifications.notifications' ns='discussion'}}</h5>
			<a class="mark-all-as-read">{{i18n 'notifications.mark-all-as-read' ns='discussion'}}</a>
		</div>
	{{/if}}
</div>

<div class="user-profile-scrollable-wrapper">
	{{#if notificationsList.length}}
		<ul class="wds-list wds-has-lines-between notifications-list">
			{{#each notificationsList as |notification|}}
				{{notification-card
						model=notification
				}}
			{{/each}}
		</ul>
	{{else}}
		{{i18n 'notifications.no-notifications-message' ns='discussion'}}
	{{/if}}
</div>
