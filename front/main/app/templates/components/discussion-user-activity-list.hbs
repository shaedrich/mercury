{{#each items as |item|}}
	<div class="row">
		<div class="user">
			{{user-avatar
				avatarUrl=item.userInfo.avatarUrl
				badgePermission=item.userInfo.badgePermission
				displayProfileName=false
				username=item.userInfo.name
				userId=item.userInfo.id
			}}
			<div class="username">
				<a href="{{item.userInfo.profileUrl}}">{{item.userInfo.name}}</a>
			</div>
		</div>
		<div class="details">
			{{yield item}}
		</div>
	</div>
{{else}}
	<div class="no-user-activity-items">
		{{svg 'wds-icons-activity' role='img' class='wds-icon icon'}}
		{{i18n 'user-activity.no-activity-yet' ns='discussion'}}
	</div>
{{/each}}
